
<% if step.errors.any? %>
    <% step.errors.full_messages.each do |msg| %>
       <div class="warning"> <%= msg %></div>
    <% end %>
<% end %>

<%= form_with model: ([habit, step]), local: true do |form| %>
 <%= hidden_field_tag "habit_id", habit.id %>
    <p>
       I will: <%= form.text_field :action_step, placeholder: "Sleep, Meditate, Draw.." %> (Action)
    </p>
    <p>
        <%= form.label :before %>
        <%= form.radio_button :before, true %>
        <%= form.label :after %>
        <%= form.radio_button :before, false %>
        <%= form.text_field :start_datetime, placeholder: "Work, School, Lunch..." %> (Activity)
    </p>
    <p>
        At: <%= form.text_field :location, placeholder: "Office, a Park, Kitchen.." %> (Location)
    </p>
    <p>
        At: <%= form.time_select :action_time, {ampm: true} %>
    </p>
    <p>
        On: 

        <%= form.label :monday %>
        <%= form.check_box :monday %>
  
        <%= form.label :tuesday %>
        <%= form.check_box :tuesday%>

        <%= form.label :wednesday %>
        <%= form.check_box :wednesday %>

        <%= form.label :thursday %>
        <%= form.check_box :thursday %>

        <%= form.label :friday %>
        <%= form.check_box :friday %>

        <%= form.label :saturday %>
        <%= form.check_box :saturday %>

        <%= form.label :sunday %>
        <%= form.check_box :sunday%>
    </p>

    <p>
        For: <%= form.number_field(:duration_number, in: 1..60) %> (Duration)
    </p>

    <p>
    <%= form.select :duration_type, ['Minutes', 'Hours']%>
    </p>

    <p>

        <%= form.submit step.id.nil? ? 'Create Action' : "Edit Action" %>
    </p>
<% end %>

