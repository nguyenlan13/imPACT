
<%= form_with model: @user, local: true do |f| %>

<div>
    <%= f.label :name %>
    <%= f.text_field :name %>
</div>
<div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
</div>
<div>
    <%= f.label :username %>
    <%= f.text_field :username %>
</div>
<div>
    <%= f.label :password %>
    <%= f.password_field :password %>
</div>

<%= f.submit "Sign Up" %>
<% end %>

<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
        <%= msg %>
    <% end %>
<% end %>